    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["project/20250120_card-game01/src", "project/20250120_card-game01/entries", "project/20250120_card-game01/pages", "project/20250120_card-game01/i18n.ts", "project/20250120_card-game01/main.tsx", "project/20250120_card-game01/my-app.tsx", "project/20250120_card-game01/types.ts"]
